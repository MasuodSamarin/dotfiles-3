docker run --rm --user "$(id -u)":"$(id -g)" \
	-v "$(pwd)":/usr/src/myapp \
	-w /usr/src/myapp \
	rust:alpine cargo $@
	
# docker run --rm --user "$(id -u)":"$(id -g)" -v "$PWD":/usr/src/myapp -w /usr/src/myapp rust:1.23.0 cargo build --release

