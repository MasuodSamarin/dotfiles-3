# Ensure that we have the credentials initialized
if [[ ! -d "$HOME/.gcp_credentials" ]];then
	dgcloud-login
fi

# Get Image if not Installed
export gcpi="google/cloud-sdk"
export IMAGES="$(sudo docker image ls -a --filter=reference='${gcpi}*:*' | grep '${gcpi}' | awk '{print $1}')"

if [ -z "$IMAGES" ] ; then
	sudo docker images pull $gcpi
fi

# Command Cradle
docker container run --rm -ti \
	-e CLOUDSDK_CONFIG=/config/gcloud \
	-v $HOME/.gcp_credentials/gcloud:/config/gcloud \
	-v $HOME/.gcp_credentials/certs:/certs \
	-v "$(pwd)":/src \
	-w /src \
	-p 8000:8000 \
	-p 8080:8080 \
	-p 25000:25000 \
	google/cloud-sdk $@
